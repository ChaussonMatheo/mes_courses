{% extends 'base.html.twig' %}

{% block title %}Nouveau Produit{% endblock %}

{% block main_content %}
    <div class="max-w-2xl mx-auto mt-6 p-6 bg-white shadow-lg rounded-lg">
        <h1 class="text-3xl font-bold text-center mb-6">üõçÔ∏è Nouveau Produit</h1>

        <!-- Formulaire de cr√©ation -->
        {{ form_start(form, { 'attr': { 'class': 'space-y-6' } }) }}

        <!-- Champ Nom -->
        <div>
            <label for="produit_nom" class="block text-gray-700 font-semibold mb-2">
                Nom du Produit
            </label>
            {{ form_widget(form.nom, {'attr': {'class': 'input input-bordered w-full', 'placeholder': 'Ex: Pommes'}}) }}
        </div>

        <!-- Champ Zone -->
        <div>
            <label for="produit_zone" class="block text-gray-700 font-semibold mb-2">
                Position dans le magasin
            </label>
            {{ form_widget(form.zone, {'attr': {'class': 'form-control w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm'}}) }}
        </div>

        <!-- Champ Marque -->
        <div>
            <label for="produit_marque" class="block text-gray-700 font-semibold mb-2">
                Marque
            </label>
            {{ form_widget(form.marque, {'attr': {'class': 'input input-bordered w-full', 'placeholder': 'Ex: Golden'}}) }}
        </div>

        <!-- Champ Quantit√© -->
        <div>
            <label for="produit_quantite" class="block text-gray-700 font-semibold mb-2">
                Quantit√©
            </label>
            {{ form_widget(form.quantite, {'attr': {'class': 'input input-bordered w-full', 'placeholder': 'Ex: 5 Kg'}}) }}
        </div>

        <!-- Champ Commentaires -->
        <div>
            <label for="produit_commentaires" class="block text-gray-700 font-semibold mb-2">
                Commentaires
            </label>
            {{ form_widget(form.commentaires, {'attr': {'class': 'textarea textarea-bordered w-full', 'placeholder': 'Ajoutez un commentaire'}}) }}
        </div>

        <!-- Bouton Soumettre -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary w-full">
                ‚ûï Ajouter le Produit
            </button>
        </div>

        {{ form_end(form) }}

        <!-- Bouton Retour -->
        <div class="mt-6 text-center">
            <a href="{{ path('app_produit_index') }}" class="btn btn-outline btn-secondary">
                ‚Ü©Ô∏è Retour √† la liste
            </a>
        </div>
    </div>
{% endblock %}
