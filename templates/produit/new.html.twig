{% extends 'base.html.twig' %}

{% block title %}Nouveau Produit{% endblock %}

{% block main_content %}
<div class="max-w-2xl mx-auto mt-6 p-6 bg-white shadow-lg rounded-lg">
    <h1 class="text-3xl font-bold text-center mb-6">üõçÔ∏è Nouveau Produit</h1>

    <!-- Formulaire de cr√©ation -->
    <form method="post" class="space-y-6">
        <!-- Champ Nom -->
        <div>
            <label for="produit_nom" class="block text-gray-700 font-semibold mb-2">
                Nom du Produit
            </label>
            <input type="text" id="produit_nom" name="produit[nom]"
                   class="input input-bordered w-full" placeholder="Ex: Pommes">
        </div>

        <!-- Champ Marque -->
        <div>
            <label for="produit_marque" class="block text-gray-700 font-semibold mb-2">
                Marque
            </label>
            <input type="text" id="produit_marque" name="produit[marque]"
                   class="input input-bordered w-full" placeholder="Ex: Golden">
        </div>

        <!-- Champ Quantit√© -->
        <div>
            <label for="produit_quantite" class="block text-gray-700 font-semibold mb-2">
                Quantit√©
            </label>
            <input type="number" id="produit_quantite" name="produit[quantite]"
                   class="input input-bordered w-full" placeholder="Ex: 5">
        </div>

        <!-- Champ Commentaires -->
        <div>
            <label for="produit_commentaires" class="block text-gray-700 font-semibold mb-2">
                Commentaires
            </label>
            <textarea id="produit_commentaires" name="produit[commentaires]" rows="3"
                      class="textarea textarea-bordered w-full" placeholder="Ajoutez un commentaire"></textarea>
        </div>

        <!-- Bouton Soumettre -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary w-full">
