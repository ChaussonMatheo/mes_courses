{% extends 'base.html.twig' %}

{% block title %}ArticlesListes index{% endblock %}

{% block body %}
    <h1>ArticlesListes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantite</th>
                <th>IsInList</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for articles_liste in articles_listes %}
            <tr>
                <td>{{ articles_liste.id }}</td>
                <td>{{ articles_liste.quantite }}</td>
                <td>{{ articles_liste.IsInList ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_articles_listes_show', {'id': articles_liste.id}) }}">show</a>
                    <a href="{{ path('app_articles_listes_edit', {'id': articles_liste.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_articles_listes_new') }}">Create new</a>
{% endblock %}
